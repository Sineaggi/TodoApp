@using TodoApp.Models
@model User
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home Page";
    string helloClass = null;
}

<script src="~/js/index.js"></script>

<div class="jumbotron">
    <h1 class="display-3">ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p class="lead">
        
    </p>
    <a id="ahh"></a>
</div>
<div class="row">
    <h3 title="@Model.Name" class="@helloClass">Hello @Model.Name!</h3>
    <a href="#" onclick="CreateTask()" class="btn btn-primary btn-large" role="button">Create Task</a>
    <a href="#" onclick="EditTask()" class="btn btn-primary btn-large" role="button">Edit Task</a>
    <a href="#" onclick="DeleteTask()" class="btn btn-primary btn-large" role="button">Delete Task</a>
</div>